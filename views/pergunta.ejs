<%- include ("partials/header.ejs") %>

<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" value="<%= pergunta.id %>" name="perguntaId">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form><hr>
        <h3>Respostas</h3>
        <br>
        <% respostas.forEach(respostas => { %>
            <div class="card">
                <div class="card-body">
                    <%= respostas.corpo %>
                </div>
            </div>
            <br>
        <% })%>
        <hr>
    </div>
</body>
<%- include ("partials/footer.ejs") %>